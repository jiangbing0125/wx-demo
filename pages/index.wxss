@import "list/list.wxss";

.index{
    background-color: #f3f3f5;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    min-height: 100%;
    font-size: 32rpx;
}
.head{
    padding: 40rpx;
    line-height: 1;
}
.desc{
    margin-top: 10rpx;
    color: #888888;
    font-size: 28rpx;
}

.widgets-item{
    margin-top: 20rpx;
    background-color: #FFFFFF;
    overflow: hidden;
    border-radius: 4px;
    cursor: pointer;
}
.widgets-info{
    display: flex;
    padding: 40rpx;
    align-items: center;
    flex-direction: row;
}
.widgets-info-show{
    background-color: #FBF9FE;
}
.widgets-info-show .widgets-info-img{
    transform: rotate(-90deg);
}
.widgets-info-name{
    flex: 1;
}
.widgets-info-img{
    width: 32rpx;
    height: 32rpx;
    transition: transform .4s;
    transform: rotate(90deg);
}

.display-none{
    display: none;
}
.display-show{
    display: block;
}
