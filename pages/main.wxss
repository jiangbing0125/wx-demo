/**index.wxss**/
.container {
    background-color:#ffffff;
    background:url(/image/bg/1.jpg) no-repeat;
    background-size:cover;
    background-position: fixed;
}
.userinfo {
    display: flex;
    flex-direction: column;
	  align-items: center;
}

.userinfo-avatar {
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx;
    border-radius: 50%;
    box-shadow: 0 0 4px rgba(0,0,0,.3);
}
.navigator{
    margin: 40rpx;
    padding: 10rpx 20rpx;
    border-radius: 4px;
    background-color: rgba(255,255,255,.3);
    box-shadow: 0 0 4px rgba(0,0,0,.3);
}
.nav-item{
    padding: 10rpx;
}
.nav-item image{
    margin: 0 auto;
    width: 100rpx;
    height: 100rpx;
    display: block;
    border-radius: 50%;
    background-color: #ffffff;
}
.nav-item text{
    display: block;
    margin-top: 20rpx;
    font-size: 14px;
    color: #fff;
}
.usermotto {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 14px;
    color: #576b95;
}